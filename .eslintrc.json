{
	"env": {
		"node": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["airbnb-base", "prettier"],
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"linebreak-style": ["error", "windows"],
		"no-unused-vars": "warn",
		"import/extensions": [
			"error",
			{
				"js": "ignorePackages"
			}
		]
	}
}
